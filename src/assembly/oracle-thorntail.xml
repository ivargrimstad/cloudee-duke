<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
   
    <id>oracle-thorntail</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <files>
        <file>
            <source>${basedir}/src/main/oracle/manifest-thorntail.json</source>
            <destName>manifest.json</destName>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${basedir}/target/${project.build.finalName}-hollow-thorntail.jar</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>${basedir}/target/${project.build.finalName}.war</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
</assembly>
